@model IEnumerable<DAL.Models.Producer>
@{
    ViewBag.Title = "Find result";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/cart.css"/>
<link rel="stylesheet" href="~/css/footer.css"/>
<div class="input-group row mt-2">
    <div class=" col">
        <h2 class="">Founded @Model.Count() records : </h2>
    </div>
    <div class="col">
        <span class="input-group-btn">
            <a class="btn btn-sm btn-primary" asp-action="Index" style="float: right;">Back to Producers</a>
        </span>
    </div>
</div>

    <table class="table table-hover">
        <tr>
            <th>First Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>WebSite</th>
            <th>Products</th>
            <th></th>
        </tr>
        @foreach (var producer in Model)
        {
            <tr>
                <td>@producer.Name</td>
                <td>@producer.Phone</td>
                <td>@producer.Email</td>
                <td>@producer.WebSite</td>
                <td><a asp-action="ShowGoods" asp-route-id="@producer.Id">Show Products</a></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@producer.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@producer.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
