@model IEnumerable<DAL.Models.Producer>
@{
    ViewBag.Title = "Producer list";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/cart.css"/>
<link rel="stylesheet" href="~/css/footer.css"/>
<a class="btn btn-sm btn-primary" style="margin: 2% 0%;" asp-action="Create">Add new producer</a>
<a class="btn btn-sm btn-primary" style="margin: 2% 0%;" asp-action="Find">Find producer</a>


<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>WebSite</th>
        <th>Products</th>
        <th></th>
    </tr>
    @foreach (var producer in Model)
    {
    <tr>
        <td>@producer.Name</td>
        <td>@producer.Phone</td>
        <td>@producer.Email</td>
        <td>@producer.WebSite</td>
        <td><a asp-action="ShowGoods" asp-route-id="@producer.Id">Show Products</a></td>
        <td>
            <form asp-action="Delete" asp-route-id="@producer.Id" method="post">
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@producer.Id">Edit</a>
                <button type="submit" class="btn btn-sm btn-danger">
                    Delete
                </button>
            </form>
        </td>
    </tr>
    }
</table>