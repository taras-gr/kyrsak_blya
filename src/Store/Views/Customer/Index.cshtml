@model IEnumerable<DAL.Models.Customer>
@{
    ViewBag.Title = "Customers list";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/cart.css"/>
<link rel="stylesheet" href="~/css/footer.css"/>
<a class="btn btn-sm btn-primary" style="margin: 2% 0%;" asp-action="Create">Add new customer</a>
<a class="btn btn-sm btn-primary" style="margin: 2% 0%;" asp-action="Find">Find customer</a>


<table class="table table-hover">
    <tr>
        <th>First Name</th>
        <th>Second Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Orders</th>
        <th></th>
    </tr>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.FirstName</td>
            <td>@customer.SecondName</td>
            <td>@customer.Phone</td>
            <td>@customer.Email</td>
            <td><a asp-action="ShowOrders" asp-route-id="@customer.Id">Orders</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@customer.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@customer.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>