@model IEnumerable<DAL.Models.Customer>
@{
    ViewBag.Title = "Find result";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/cart.css"/>
<link rel="stylesheet" href="~/css/footer.css"/>

<div class="input-group row mt-2">
        <div class=" col">
            <h2 class="">Founded @Model.Count() records : </h2>
        </div>
        <div class="col">
            <span class="input-group-btn">
                <button class="btn btn-sm btn-primary" asp-action="Index" style="float: right;">Back to Customers</button>
            </span>
        </div>
</div>

<table class="table table-hover">
    <tr>
        <th>First Name</th>
        <th>Second Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Orders</th>
        <th></th>
    </tr>
    @foreach (var customer in Model)
    {
    <tr>
        <td>@customer.FirstName</td>
        <td>@customer.SecondName</td>
        <td>@customer.Phone</td>
        <td>@customer.Email</td>
        <td><a asp-action="ShowOrders" asp-route-id="@customer.Id">Orders</a></td>
        <td>
            <form asp-action="Delete" asp-route-id="@customer.Id" method="post">
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@customer.Id">Edit</a>
                <button type="submit" class="btn btn-sm btn-danger">
                    Delete
                </button>
            </form>
        </td>
    </tr>
    }
</table>