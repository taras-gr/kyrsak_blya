@model IEnumerable<DAL.Models.Storage>
@{
    ViewBag.Title = "Find result";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/cart.css" />
<link rel="stylesheet" href="~/css/footer.css" />
<div class="input-group row mt-2">
    <div class=" col">
        <h2 class="">Founded @Model.Count() records : </h2>
    </div>
    <div class="col">
        <span class="input-group-btn">
            <a class="btn btn-sm btn-primary" asp-action="Index" style="float: right;">Back to Storages</a>
        </span>
    </div>
</div>



<table class="table table-hover">
    <tr>
        <th>City</th>
        <th>Street</th>
        <th>Goods</th>
        <th></th>
    </tr>
    @foreach (var storage in Model)
    {
        <tr>
            <td>@storage.City</td>
            <td>@storage.Street</td>
            <td><a asp-action="ShowGoods" asp-route-id="@storage.Id">Show Goods</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@storage.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@storage.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
