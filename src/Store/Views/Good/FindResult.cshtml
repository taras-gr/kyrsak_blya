@model IEnumerable<DAL.Models.Good>
@{
    ViewBag.Title = "Find result";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/cart.css" />
<link rel="stylesheet" href="~/css/footer.css" />

<div class="input-group row mt-2">
    <div class=" col">
        <h2 class="">Founded @Model.Count() records : </h2>
    </div>
    <div class="col">
        <span class="input-group-btn">
            <a class="btn btn-sm btn-primary" asp-action="Index" style="float: right;">Back to Goods</a>
        </span>
    </div>
</div>

<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>Year of goods production</th>
        <th>The warranty period</th>
        <th>Price</th>
        <th>Type</th>
        <th>Amount</th>
        <th></th>
    </tr>
    @foreach (var good in Model)
    {
        <tr>
            <td>@good.Name</td>
            <td>@good.YearOfManufacture</td>
            <td>@good.WarrantyTerm months</td>
            <td>@good.Price</td>
            <td>@good.Type</td>
            <td>@good.Count</td>
            <td>
                <form asp-action="Delete" asp-route-id="@good.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@good.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
