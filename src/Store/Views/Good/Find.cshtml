@model Store.ViewModels.FindGoodView
@{
    ViewBag.Title = "Find Good";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/cart.css"/>
<link rel="stylesheet" href="~/css/footer.css"/>
<form asp-action="Find" asp-controller="Good">
    <div class="form-group" style="margin-top: 2%;">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProducerName" class="control-label">Producer name</label>
        <input type="text" asp-for="ProducerName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="YearOfManufacture" class="control-label">Year of manufacture</label>
        <input type="number" asp-for="YearOfManufacture" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartPrice" class="control-label">Price</label>
        <input type="number" asp-for="StartPrice" placeholder="From" class="form-control"/>
        <input type="number" asp-for="EndPrice" placeholder="To" class="form-control" style="margin-top: 1%;" />
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label">Type</label>
        <input type="text" asp-for="Type" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Find" class="btn btn-primary" style="margin: 2% 35%; width: 30%;" />
    </div>
</form>

