@model IEnumerable<DAL.Models.Good>
@{
    ViewBag.Title = "Goods list";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/cart.css"/>
<link rel="stylesheet" href="~/css/footer.css"/>
<a class="btn btn-sm btn-primary" style="margin: 2% 0%;" asp-action="Create">Додати новий товар</a>
<a class="btn btn-sm btn-primary" style="margin: 2% 0%;" asp-action="Find">Знайти товар</a>

<table class="table table-hover">
    <tr>
        <th>Назва</th>
        <th>Рік виробництва</th>
        <th>Гарантія</th>
        <th>Виробник</th>
        <th>Ціна</th>
        <th>Стать</th>
        <th>Кількість</th>
        <th></th>
    </tr>
    @foreach (var good in Model)
    {
        <tr>
            <td>@good.Name</td>
            <td>@good.YearOfManufacture</td>
            <td>@good.WarrantyTerm months</td>
            <td>@good.Producer.Name</td>
            <td>@good.Price</td>
            <td>@good.Type</td>
            <td>@good.Count</td>
            <td>
                <form class="d-flex" asp-action="Delete" asp-route-id="@good.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@good.Id">Редагувати</a>
                    <button type="submit" class="btn btn-sm btn-danger ml-1">
                        Видалити
                    </button>
                </form>
            </td>
        </tr>
    }
</table>