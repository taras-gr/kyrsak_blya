@model DAL.Models.Customer
@{
    ViewBag.Title = "Order's customer";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/cart.css"/>
<link rel="stylesheet" href="~/css/footer.css"/>
<div class="input-group row mt-2">
    <div class=" col">
        <h2 class="">Customer of @ViewBag.OrderId order : </h2>
    </div>
    <div class="col">
        <span class="input-group-btn">
            <a class="btn btn-sm btn-primary" asp-controller="Order" asp-action="Index" style="float: right;">Back</a>
        </span>
    </div>
</div>

        <table class="table table-hover">
            <tr>
                <th>First Name</th>
                <th>Second Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Orders</th>
                <th></th>
            </tr>
            <tr>
                <td>@Model.FirstName</td>
                <td>@Model.SecondName</td>
                <td>@Model.Phone</td>
                <td>@Model.Email</td>
                <td><a asp-action="ShowOrders" asp-controller="Customer" asp-route-id="@Model.Id">Orders</a></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        </table>
